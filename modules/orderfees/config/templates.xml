<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!-- Templates 1.6 -->
    <template file="order-detail.tpl">
        <pattern>
            <match><![CDATA[{foreach from=$discounts item=discount}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleOrderDetail" order=$order}
                                {foreach from=$discounts item=discount}]]></replace>
        </pattern>
    </template>
    
    <template file="order-payment.tpl">
        <pattern>
            <match><![CDATA[{if count($discounts)}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleOrderPayment" discounts=$discounts}
                                {if count($discounts)}]]></replace>
        </pattern>
    </template>
    
    <template file="order-payment-classic.tpl">
        <pattern>
            <match><![CDATA[{if count($discounts)}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleOrderPayment" discounts=$discounts}
                                {if count($discounts)}]]></replace>
        </pattern>
    </template>
    
    <template file="order-payment-advanced.tpl">
        <pattern occurence="1">
            <match><![CDATA[</a>]]></match>
            <replace><![CDATA[{hook h="displayCartRuleOrderPaymentOption" payment_option=$paymentOption}
                                </a>]]></replace>
        </pattern>
    </template>
    
    <template file="invoice" module="pdf">
        <pattern>
            <match><![CDATA[<!-- CART RULES -->]]></match>
            <replace><![CDATA[{hook h="displayCartRuleInvoiceProductTab" order=$order discounts=$cart_rules}
                                <!-- CART RULES -->]]></replace>
        </pattern>
    </template>
    
    <template file="invoice.product-tab" module="pdf">
        <pattern>
            <match><![CDATA[<!-- CART RULES -->]]></match>
            <replace><![CDATA[{hook h="displayCartRuleInvoiceProductTab" order=$order discounts=$cart_rules}
                                <!-- CART RULES -->]]></replace>
        </pattern>
    </template>
    
    <template file="invoice-b2b" module="pdf">
        <pattern>
            <match><![CDATA[{if $order_invoice->total_discount_tax_incl > 0}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleInvoiceB2B" order=$order discounts=$cart_rules}
                                {if $order_invoice->total_discount_tax_incl > 0}]]></replace>
        </pattern>
    </template>
    
    <template file="delivery-slip.product-tab" module="pdf">
        <pattern>
            <match><![CDATA[<!-- END PRODUCTS -->]]></match>
            <replace><![CDATA[{hook h="displayCartRuleDeliverySlipProductTab" order=$order}
                                <!-- END PRODUCTS -->]]></replace>
        </pattern>
    </template>
    
    <template file="order-slip.product-tab" module="pdf">
        <pattern>
            <match><![CDATA[{if is_array($cart_rules) && count($cart_rules)}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleOrderSlipProductTab" order=$order discounts=$cart_rules}
                                {if is_array($cart_rules) && count($cart_rules)}]]></replace>
        </pattern>
    </template>
    
    <template file="invoice.tax-tab" module="pdf">
        <pattern>
            <match><![CDATA[{if !$has_line}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleInvoiceTaxTab" order=$order}
                                {if !$has_line}]]></replace>
        </pattern>
        <pattern>
            <match><![CDATA[{if isset($ecotax_tax_breakdown)}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleInvoiceTaxTab" order=$order}
                                {if isset($ecotax_tax_breakdown)}]]></replace>
        </pattern>
    </template>
    
    <template file="shopping-cart.tpl">
        <pattern>
            <match><![CDATA[{if sizeof($discounts)}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleShoppingCart" discounts=$discounts}
                                {if sizeof($discounts)}]]></replace>
        </pattern>
    </template>
    
    <template file="blockcart.tpl" module="blockcart">
        <pattern>
            <match><![CDATA[{if $discounts|@count > 0}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleBlockCart" discounts=$discounts}
                                {if $discounts|@count > 0}]]></replace>
        </pattern>
        <pattern occurence="2">
            <match><![CDATA[{if $show_wrapping}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleLayerCart" discounts=$discounts}
                                {if $show_wrapping}]]></replace>
        </pattern>
    </template>
    
    <template file="blockcart-json.tpl" module="blockcart">
        <pattern>
            <match><![CDATA[{$discount.value_real|json_encode}{/if}]]></match>
            <replace><![CDATA[{$discount.value_real|json_encode}{/if},"is_fee":{$discount.is_fee|intval},"quantity": {$discount["obj"]->quantity},"unit_price": {if $priceDisplay == 1}{convertPrice|json_encode price=$discount["obj"]->unit_value_tax_exc}{else}{convertPrice|json_encode price=$discount["obj"]->unit_value_real}{/if},"unit_price_float": {if $priceDisplay == 1}{$discount["obj"]->unit_value_tax_exc|json_encode}{else}{$discount["obj"]->unit_value_real|json_encode}{/if}]]></replace>
        </pattern>
    </template>
    
    <template file="form.tpl" admin="AdminOrdersController">
        <pattern>
            <match><![CDATA[<div class="panel" id="vouchers_part"]]></match>
            <replace><![CDATA[{hook h="displayCartRuleAdminOrders"}
                                <div class="panel" id="vouchers_part"]]></replace>
        </pattern>
    </template>
    
    <template file="product.tpl">
        <pattern>
            <match><![CDATA[<!-- end product_attributes -->]]></match>
            <replace><![CDATA[{hook h="displayCartRuleProductAttributes" id_product=$product->id|intval}
                                <!-- end product_attributes -->]]></replace>
        </pattern>
    </template>
    
    <template file="order-address.tpl">
        <pattern>
            <match><![CDATA[<div class="addresses]]></match>
            <replace><![CDATA[{hook h="displayCartRuleAddress"}<div class="addresses]]></replace>
        </pattern>
    </template>
    <!-- /Templates 1.6 -->
    
    <!-- Templates 1.7 -->
    <template file="templates/checkout/_partials/cart-voucher.tpl">
        <pattern>
            <match><![CDATA[{if $cart.vouchers.added}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleCartVoucher" discounts=$cart.vouchers}
                                {if $cart.vouchers.added}]]></replace>
        </pattern>
    </template>
    
    <template file="templates/checkout/_partials/order-confirmation-table.tpl">
        <pattern>
            <match><![CDATA[{foreach $subtotals as $subtotal}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleOrderConfirmation" order=$order.details}
                                {foreach $subtotals as $subtotal}]]></replace>
        </pattern>
    </template>
    
    <template file="templates/customer/_partials/order-detail-return.tpl">
        <pattern>
            <match><![CDATA[{foreach $order.subtotals as $line}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleOrderDetailReturn" order=$order.details}
                                {foreach $order.subtotals as $line}]]></replace>
        </pattern>
    </template>
    
    <template file="templates/customer/_partials/order-detail-no-return.tpl">
        <pattern>
            <match><![CDATA[{foreach $order.subtotals as $line}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleOrderDetailNoReturn" order=$order.details}
                                {foreach $order.subtotals as $line}]]></replace>
        </pattern>
    </template>
    
    <template file="templates/checkout/_partials/steps/payment.tpl">
        <pattern>
            <match><![CDATA[{$option.call_to_action_text}]]></match>
            <replace><![CDATA[{$option.call_to_action_text nofilter}]]></replace>
        </pattern>
    </template>
    
    <template file="templates/checkout/_partials/steps/addresses.tpl">
        <pattern occurence="1">
            <match><![CDATA[{if $use_same_address && !$cart.is_virtual}]]></match>
            <replace><![CDATA[{hook h="displayCartRuleAddress"}{if $use_same_address && !$cart.is_virtual}]]></replace>
        </pattern>
    </template>
    <!-- /Templates 1.7 -->
</templates>
